<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/auth_graph"
    app:startDestination="@id/signInFragment">


    <fragment
        android:id="@+id/signUpFragment"
        android:name="com.aguadaserra.app.main_ui.fragment.auth.register.SignUpFragment"
        android:label="fragment_sign_up"
        tools:layout="@layout/fragment_sign_up" >
        <action
            android:id="@+id/action_signUpFragment_to_userInfoFragment"
            app:destination="@id/userInfoFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"/>
        <action
            android:id="@+id/action_signUpFragment_to_signInFragment"
            app:destination="@id/signInFragment"
            app:popUpTo="@id/signUpFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"/>
        <action
            android:id="@+id/action_signUpFragment_to_completeDataFragment"
            app:destination="@id/completeDataFragment"
            app:popUpTo="@id/signUpFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />
    </fragment>

    <fragment
        android:id="@+id/userInfoFragment"
        android:name="com.baedigital.app.ui.fragment.auth.register.UserInfoFragment"
        android:label="fragment_user_info"
        tools:layout="@layout/fragment_user_info" >
        <action
            android:id="@+id/action_userInfoFragment_to_userDefinitionFragment"
            app:destination="@id/userDefinitionFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"
            app:popUpTo="@id/userInfoFragment" />
        <argument
            android:name="email"
            app:argType="string"
            android:defaultValue=" " />
    </fragment>
    <fragment
        android:id="@+id/userDefinitionFragment"
        android:name="com.baedigital.app.ui.fragment.auth.register.UserDefinitionFragment"
        android:label="fragment_user_definition"
        tools:layout="@layout/fragment_user_definition" >
        <action
            android:id="@+id/action_userDefinitionFragment_to_userPassionsFragment"
            app:destination="@id/userPassionsFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"
            app:popUpTo="@id/userDefinitionFragment" />
        <argument
            android:name="name"
            app:argType="string"
            android:defaultValue=" " />
    </fragment>
    <fragment
        android:id="@+id/userPassionsFragment"
        android:name="com.baedigital.app.ui.fragment.auth.register.UserPassionsFragment"
        android:label="fragment_user_passions"
        tools:layout="@layout/fragment_user_passions" />
    <fragment
        android:id="@+id/signInFragment"
        android:name="com.aguadaserra.app.main_ui.fragment.auth.login.SignInFragment"
        android:label="fragment_sign_in"
        tools:layout="@layout/fragment_sign_in" >
        <action
            android:id="@+id/action_signInFragment_to_recoverPasswordFragment"
            app:destination="@id/recoverPasswordFragment"
            app:popUpTo="@id/signInFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"/>
    </fragment>
    <fragment
        android:id="@+id/recoverPasswordFragment"
        android:name="com.aguadaserra.app.main_ui.fragment.auth.recover_password.RecoverPasswordFragment"
        android:label="fragment_recover_password"
        tools:layout="@layout/fragment_recover_password" >
        <action
            android:id="@+id/action_recoverPasswordFragment_to_verifyTokenFragment"
            app:destination="@id/verifyTokenFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />
    </fragment>
    <fragment
        android:id="@+id/verifyTokenFragment"
        android:name="com.aguadaserra.app.main_ui.fragment.auth.recover_password.VerifyTokenFragment"
        android:label="fragment_verify_token"
        tools:layout="@layout/fragment_verify_token" >
        <action
            android:id="@+id/action_verifyTokenFragment_to_updatePasswordByTokenFragment"
            app:destination="@id/updatePasswordByTokenFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />
    </fragment>
    <fragment
        android:id="@+id/updatePasswordByTokenFragment"
        android:name="com.aguadaserra.app.main_ui.fragment.auth.recover_password.UpdatePasswordByTokenFragment"
        android:label="fragment_update_password_by_token"
        tools:layout="@layout/fragment_update_password_by_token" />
    <action
        android:id="@+id/action_global_updatePasswordByTokenFragment"
        app:launchSingleTop="true" />
    <fragment
        android:id="@+id/completeDataFragment"
        android:name="com.baedigital.app.ui.fragment.auth.external_login.CompleteDataFragment"
        android:label="fragment_complete_data"
        tools:layout="@layout/fragment_complete_data" >
        <action
            android:id="@+id/action_completeDataFragment_to_userDefinitionFragment"
            app:destination="@id/userDefinitionFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"
            app:popUpTo="@id/completeDataFragment" />
    </fragment>
</navigation>